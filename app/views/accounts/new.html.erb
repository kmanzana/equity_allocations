<% provide(:title, 'Banking Info') %>
<h3 class='text-center'>Step 3/4</h3>
<h4 class='text-center'>Please provide your banking information.</h4>
<br/>

<div class='row'>
  <div class='backdrop col-md-6 col-md-offset-3'>
    <span class='help-block'>The following information will be used in order to fund your investment. Your routing number and account number can be found on the bottom of a paper check. Once this information is completed, you will be presented with a confirmation page before any funds are debited from your account.</span>
    <br/>
    <%= form_for(@account, url: accounts_path(amount: params[:amount]), method: :POST) do |f| %>
      <% if @account.errors.any? %>
        <div id='error_explanation'>
          <div class='alert alert-danger'>
            The form contains <%= pluralize(@account.errors.count, 'error') %>.
          </div>
          <ul>
            <% @account.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group'>
        <%= f.label :account_name %>
        <%= f.text_field :account_name, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :routing_number %>
        <%= f.text_field :routing_number, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :account_number %>
        <%= f.text_field :account_number, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <div class='checkbox'>
          <%= f.label :savings_account do %>
            <%= f.check_box :savings_account, type: :checkbox %> <b>Savings account</b>
          <% end %>
        </div>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
