<% provide(:title, 'Investment amount') %>
<h3 class='text-center'>Step 2/5</h3>
<h4 class='text-center'>Please enter your investment amount.</h4>
<br/>
<div class='row'>
  <div class='backdrop col-md-6 col-md-offset-3'>
    <%= form_for(:amount, url: investments_path, method: :POST) do |f| %>
      <div class='form-group'>
        <label class='sr-only' for='investment_amount'>Amount (in dollars)</label>
        <div class='input-group'>
          <div class='input-group-addon'>$</div>
          <%= f.text_field :amount, class: 'form-control', placeholder: :Amount %>
          <div class='input-group-addon'>.00</div>
        </div>
      </div>
      <%= f.submit 'Proceed', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
